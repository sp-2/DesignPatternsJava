		      j--;
		    }
		    //System.out.println("\nLeft!= "+l+"Right ="+r);
		    System.out.println("\n#i= "+i+" #j="+j);
		    for(int i1 = 0; i1< a.length; i1++) {
				System.out.print(a[i1]+" ");
			}
		    if (i <= j) {
		      int t = a[i];
		      a[i] = a[j];
		      a[j] = t;
		      i++;
		      j--;
		      System.out.println("\n*******i= "+i+" #j="+j);
		    }
		    System.out.println("\n*******i= "+i+" #j="+j);
//		    for(int i1 = 0; i1< a.length; i1++) {
//				System.out.print(a[i1]+"..");
//			}
		  }
		  System.out.println("\ni= "+i+" j="+j);
			for(int i1 = 0; i1< a.length; i1++) {
				System.out.print(a[i1]+". ");
			}
//		  int t = a[i];
//	      a[i] = x;
//	      a[l] = t;

//	      quickSort11(a, l, i);
