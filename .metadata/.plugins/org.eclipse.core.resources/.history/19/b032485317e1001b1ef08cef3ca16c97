		int pivot = partitionHoare(items, start, end);
		System.out.println("\npivot "+pivot);
		//if(start<pivot-1) {
		quickSortHoareH(items, start, pivot);//}
		//if(pivot<end) {
		quickSortHoareH(items, pivot+1, end);//}
	
	}
	
